# Tekvoro API Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5002

# Database
MONGODB_URI=mongodb://localhost:27017/tekvoro
DB_POOL_SIZE=100
DB_MIN_POOL_SIZE=10

# JWT Authentication
JWT_SECRET=tekvoro-super-secret-jwt-key-development-change-in-production
JWT_EXPIRES_IN=7d

# SendGrid Email Configuration
SENDGRID_API_KEY=SG.placeholder-sendgrid-key-add-your-key
EMAIL_FROM_ADDRESS=info@tekvoro.com
EMAIL_REPLY_TO=info@tekvoro.com

# OpenAI (for AI search enhancement)
OPENAI_API_KEY=sk-placeholder-add-your-openai-key

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_placeholder-add-your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# Application URLs
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:5002

# Security
BCRYPT_ROUNDS=10

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5002,https://tekvoro.com,https://www.tekvoro.com

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ALERTS=true
ENABLE_TRENDING_NEWS=true
ENABLE_VOICE_SEARCH=true
