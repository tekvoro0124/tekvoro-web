# Tekvoro API Environment Configuration
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/tekvoro

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# SendGrid Email Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_FROM_ADDRESS=info@tekvoro.com
EMAIL_REPLY_TO=info@tekvoro.com

# OpenAI (for AI search enhancement)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Application URLs
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:5000

# Security
BCRYPT_ROUNDS=12

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://tekvoro.com,https://www.tekvoro.com
